{
    "packaging" : [
        {
            "basic" : "Veracode expects you to submit .NET application as a DLL, EXE, ZIP, or NUPKG file.",
            "sca": [
                "Include DLL dependencies in upload."
            ],
            "format" : [
                {
                    "type" : "ZIP",
                    "structure": [
                        {
                            "folders": "./<library>.dll"
                        },
                        {
                            "folders": "./<library>.exe"
                        },
                        {
                            "folders": "./<library>.pdb"
                        }
                    ],
                    "notes": [
                        {
                            "note": "Remove any runtime folders generated by framework dependent builds." 
                        }
                    ]
                },
                {
                    "type" : "NUPKG",
                    "structure": [
                        {
                            "folders": "/content/*"
                        },
                        {
                            "folders": "/lib/<framework>/<library>.dll"
                        },
                        {
                            "folders": "/tools/*"
                        },
                        {
                            "folders": "[Content_Types].xml"
                        },
                        {
                            "folders": "<library>.nuspec"
                        } 
                    ],
                    "notes": [
                        {
                            "note": "Veracode supports analyzing .NET applications packaged in the standard NuGet NUPKG format." 
                        },
                        {
                            "note": "Veracode extracts executables for analysis from the highest version of the frameworks located in the lib directory."
                        }
                    ]
                }                                 
            ],
            "special" : [
                {
                    "type": "Web Project",
                    "notes": [
                        {
                            "note": "Web Projects should be precompiled/publish to generate separate assemblies for the views."
                        }
                    ]
                } 
            ]
        }
    ],
    "compilation" : [
        {
            "basic" : "Build with DEBUG configuration",
            "code" : "dotnet publish -c Debug -p:PublishProfile=FolderProfile",
            "notes" : ["Veracode does not support static analysis of Self-Contained Deployment (SCD) .NET Core applications."]
       }
    ],
