                        {
                            "folders": "./<library>.dll"
                        },
                        {
                            "folders": "./<library>.exe"
                        },
                        {
                            "folders": "./<library>.pdb"
                        }
                    ],
                    "notes": [
                        {
                            "note": "Remove any runtime folders generated by framework dependent builds."
                        }
                    ]
                },
                {
                    "type" : "NUPKG",
                    "structure": [
                        {
                            "folders": "/content/*"
                        },
                        {
                            "folders": "/lib/<framework>/<library>.dll"
                        },
                        {
                            "folders": "/tools/*"
                        },
                        {
                            "folders": "[Content_Types].xml"
                        },
                        {
                            "folders": "<library>.nuspec"
                        }
                    ],
                    "notes": [
                        {
                            "note": "Veracode supports analyzing .NET applications packaged in the standard NuGet NUPKG format."
